{
  "name": "@laboperator-gmbh/workflow-schema",
  "version": "0.0.1",
  "description": "Laboperator Workflow Schemas and template validation.",
  "repository": {
    "type": "git",
    "url": "github:laboperator-gmbh/workflow-schema"
  },
  "license": "Apache-2.0",
  "author": "Laboperator GmbH",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && yarn build:schema && tsc -p tsconfig.build.json && cp src/types.d.ts dist",
    "build:schema": "ts-node src/compile.ts",
    "dev": "nodemon src/compile.ts & nodemon src/validation.ts",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "lint": "eslint --fix 'src/**/*.{ts,js}'",
    "postinstall": "husky",
    "sort": "sort-package-json package.json",
    "test": "jest --runInBand",
    "test:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:dev": "jest --runInBand --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/",
      "__tests__/",
      "workflow_template_schema.json",
      "workflow_step_template_schema.json"
    ]
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@laboperator-gmbh/config": "~0.2.1",
    "@laboperator-gmbh/eslint-config-node": "~0.2.1",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.13.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "lint-staged": "^16.2.7",
    "lodash": "^4.17.23",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "sort-package-json": "^3.6.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  },
  "packageManager": "yarn@4.12.0"
}
